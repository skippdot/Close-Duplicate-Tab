{
  "name": "close-duplicate-tab-tests",
  "version": "2.6.0",
  "description": "Unit tests for Close Duplicate Tab extension",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:url": "node test_url_extraction.js"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "close_tabs.js",
      "options.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "keywords": ["chrome-extension", "tabs", "duplicates", "testing"],
  "author": "Close Duplicate Tab Team",
  "license": "MIT"
}
